{% extends 'base.html.twig' %}


{% block body %}
    <div>

        {#{{ form(form) }}#}


        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}


    </div>

    <div class="container">
        <h1 class="titre-contact"><span class="dot">.</span> INSCRIPTION <span class="dot">.</span></h1>


