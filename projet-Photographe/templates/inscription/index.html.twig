            <div class="col-lg-4 col-md-4 col-sm-4">
                {{ form_widget(form.City, {'attr': {
                    'placeholder': 'form.adress.city',
                    'class': 'input  input-form',
                    'required': 'true',
                }})  }}
                {{ form_errors(form.City) }}
                {{ form_help(form.City) }}
            </div>
        </div>


        <div class="row">
            <div class="col-lg-2 offset-lg-5 col-md-2 offset-md-5 col-sm-2 offset-sm-5">
                <button  class="button-contact">Envoyer</button>
            </div>
        </div>

    </div>




    {{ form_end(form) }}




