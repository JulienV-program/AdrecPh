{% extends 'base.html.twig' %}
{% dump %}
{% block title %}Hello UploaderController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div>
        {% include 'uploader/dropzone.html.twig' with {'id' : galeryId} %}
    </div>
    <div class="example-wrapper">

        <ul id="title" name="title">
            {% for elem in photos %}
                {% if elem.Galery.id ==  galeryId %}
                <img src="{{ elem.path }}">
                    {% set photo = { 'photo': elem } %}
                    {% include 'uploader/_delete_form.html.twig' with photo %}
                {% endif %}
            {% endfor %}

        </ul>
    </div>
{% endblock %}
