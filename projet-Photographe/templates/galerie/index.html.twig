{% extends 'base.html.twig' %}
{% dump %}
{% block title %}Bonjour {{ user | capitalize }} !{% endblock %}

{% block head %}
    <meta charset="UTF-8">
    {#<link rel="stylesheet" href="style.css" />  <!-- Fichier CSS -->#}
    <!--[if lt IE 9]>
    <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>

    <![endif]-->
{% endblock %}

{% block body %}

<div id="galerie-menu">

    <nav>
        {% for item in galeries %}
            {% if item.Statut == 0 %}
        <a href="{{ path('galerie_image',{'id': item.id}) }}" tabindex="0" title="{{ item.name }}"    ><img class="galImg" src="{{ item.photos.0.path | imagine_filter('galery_thumbnail') }}"  />
        </a>
            {% elseif User != null %}
                {% if User.galery != null %}
                {% if item.id == User.galery.id %}
                    <a href="{{ path('galerie_image',{'id': item.id}) }}" tabindex="0" title="{{ item.name }}"    ><img class="galImg" src="{{ item.photos.0.path | imagine_filter('galery_thumbnail') }}"  />
                    </a>
                {% endif %}
            {% endif %}
            {% endif %}
        {% endfor %}
    </nav>
</div>

    <div id="fullSize" class ="hide"  onclick="hide()"> </div>



    {#<form method="post" action="{{ path('panier') }}" onsubmit="return confirm('Vos photo ont bien été ajoutées au panier')">#}
    {#{% for item in galerie %}#}
    {{ form_start(form) }}
    {% if galerie.Statut == 0 %}
    <div>
        <a id="{{ galerie.id }}" href="galerie/">{{ galerie.name }}</a>
    </div>


    <div class="thumbnail">

        {% for lien in form.lienPhotoImages %}
                {% if lien.vars.data.format == null %}
                    <span class="galery-selector">
                        <a class="zoom" href="#" onclick="show(this.name)" name="{{ lien.vars.data.photo.path }}">
                            <img class="thumb" src="{{ lien.vars.data.photo.path  | imagine_filter('galery_thumbnail') }}"/>
                        </a>
                        {% if User != null %}
                        {{ form_widget(lien) }}
                        {% endif %}
                    </span>

                {% endif %}
        {% endfor %}

                {% elseif User != null %}
                    {% if User.galery != null %}
                        <div>
                            <a id="{{ galerie.id }}" href="galerie/">{{ galerie.name }}</a>
                        </div>


                        <div class="thumbnail">
                        {% for lien in form.lienPhotoImages %}
                            {% if lien.vars.data.photo.galery.id == User.galery.id %}

                                {% if lien.vars.data.format == null %}
                                    <span class="galery-selector">
                                        <a class="zoom" href="#" onclick="show(this.name)" name="{{ lien.vars.data.photo.path }}">
                                          <img class="thumb" src="{{ lien.vars.data.photo.path  | imagine_filter('galery_thumbnail') }}"/>
                                        </a>
                                         {% if User != null %}
                                             {{ form_widget(lien) }}
                                         {% endif %}
                                    </span>

                                {% endif %}
                        {% endif %}
                    {% endfor %}
                {% endif %}
        {% endif %}

    </div>
    {% if User != null %}
    {{ form_widget(form.submit,  {'label' : 'ajouter au panier'}) }}
    {% endif %}
    <div style="display: none">
        {{ form_rest(form) }}

    </div>
    {{ form_end(form) }}
    <script src="/asset/script.js"></script>


{% endblock %}
