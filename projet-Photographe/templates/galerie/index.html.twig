{% extends 'base.html.twig' %}
{% dump %}
{% block title %}Bonjour {{ user | capitalize }} !{% endblock %}

{% block head %}
    <meta charset="UTF-8">
    <title>Mon joli menu en HTML/CSS !</title>
    <link rel="stylesheet" href="style.css" />  <!-- Fichier CSS -->
    <!--[if lt IE 9]>
    <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
{% endblock %}

{% block body %}

<div id="galerie-menu">
    <nav>
        {% for item in galeries %}
            {% if item.Statut == 0 %}
        <a href="{{ item.id }}" tabindex="0" title="{{ item.name }}"    ><img src="http://lorempixel.com/300/300/sports/1/"  alt="sport 1"  />
        </a>
            {% endif %}
        {% endfor %}
    </nav>
</div>

<div>
    {% for item in galeries %}
        {% if item.Statut == 0 %}
             <div>
                <a id="{{ item.id }}" href="galerie/">{{ item.name }}</a>
            </div>
            {% for elem in photos %}
                {% if item.name == elem.galery.name %}
                    <img src="{{ elem.Path }}"/>
                {% endif %}
            {% endfor %}
        {% endif %}
    {% endfor %}
</div>


{% endblock %}
